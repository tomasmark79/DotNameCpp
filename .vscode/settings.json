{
    "C_Cpp.intelliSenseEngine": "disabled", // Disable the built-in IntelliSense engine
    "editor.codeLens": true,
    "clangd.enable": true,
    "clangd.checkUpdates": true,
    "clangd.arguments": [
        "--background-index",
        "--completion-style=detailed",
        "--header-insertion=never",
        "--clang-tidy",
        "--compile-commands-dir=${workspaceFolder}/build/standalone/default/debug"
    ],
    "[cpp]": {
        "editor.formatOnSave": true
    },
    "files.associations": {
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.h": "cpp",
        "*.c": "cpp"
    }
}